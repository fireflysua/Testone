pipeline {
    
    agent any
  
    stages {
      
      stage("build") {          
          steps {
            echo 'building the application ...'
              echo 'Application step 2 ok build ...'
              }
               }
          
      stage("test") {          
           steps {
            echo 'testing the application ...'
               echo 'Application step 2 ok test ...'
              }
               }
        
        stage("deploy") {          
          steps {
            echo 'deploying the application ...'
              echo 'Application step 2 ok deploy ...'
              }
               }
        
            }
           
          }
